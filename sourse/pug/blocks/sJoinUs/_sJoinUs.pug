mixin sJoinUs-team()
	// start sJoinUs
	+b.SECTION.sJoinUs--team.section#sJoinUs&attributes(attributes)
		.container.text-center
			+b.section-title.text-center
				h2 Team
				h3 Du möchtest auch ein Projekt mit uns Starten?
				p Zögere nicht und schreibe uns dein Anliegen.
			mixin item(i,t)
				+e.item
					if block
						block
					else
						+e.ingWrap--sm
							+pic(`photoPerson-${i}`,'','')
						p= t
			.row.justify-content-center
				.col-lg
					.row
						+e.col.col-12
							+item('3','Christin')
						+e.col.col-6
							+item('4','Anna')
						+e.col.col-6
							+item('5','Frank')
				.col-lg-3
					+e.ingWrap
						+pic('photoPerson-2','','')
					+e.name Christian Dittrich
					+e.position Softwareentwickler und Unternehmer
					+e.mail(href="mailto:contact@creatale.de") contact@creatale.de
				.col-lg
					.row
						+e.col.col-12
							+item('6','Patrik')
						+e.col.col-6
							+item()
								+e.btn.circle-btn-frame(href="#")
									| Werde Teil
									br
									| unseres
									br
									| Teams!
						+e.col.col-6
							+item('7','Markus')

