mixin item-sos(icon, a='#')
	+e.A.item(href= a target="_blank")
		if block
			block
		else
			+icon(icon)
//- social buttons
mixin soc()
	+b.soc
		if block
			block
		else
			+item-sos('twitter')
				img(src="img/svg/twitter.svg" alt="")
			+item-sos('fb')
				img(src="img/svg/fb.svg" alt="")
			+item-sos('unknown')
				img(src="img/svg/unknown.svg" alt="")
			+item-sos('github')
				img(src="img/svg/github.svg" alt="")

