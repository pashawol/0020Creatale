
mixin modal() 
	//  start modals
	+b.modal-win(id="modal-call" class=" " style="display: none" )
		+form-wrap
			.text-center
				+e.title.form-data.h3.ttu Back call
				p.after-headline Fill out the application and we will contact you within 15 minutes
			+input("Your name")(required)  
			+e.BUTTON.btn.btn(type="submit"  ) 
			+polite()

	+b.modal-win(id="modal-call-map" class="" style="display: none" )
		<iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d2622.655382762385!2d9.1868289!3d48.9029045!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4799d190d34a24ab%3A0x8c273d1b96ea462c!2sHeilbronner%20Str.%2042%2C%2071634%20Ludwigsburg%2C%20Deutschland!5e0!3m2!1sde!2sua!4v1602062513778!5m2!1sde!2sua" width="800" height="600" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
	// #modal-call
	
	// end modals